{
	"$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
	"assist": {
		"enabled": true,
		"actions": {
			"recommended": true,
			"source": { "recommended": true, "organizeImports": "off" }
		}
	},
	"formatter": {
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 110
	},
	"vcs": {
		"enabled": true,
		"useIgnoreFile": true,
		"clientKind": "git",
		"defaultBranch": "main"
	},
	"linter": {
		"rules": {
			"style": {
				"useBlockStatements": "off",
				"useSingleVarDeclarator": "off",
				"noUnusedTemplateLiteral": "off",
				"noNonNullAssertion": "off",
				"noParameterAssign": "off"
			},
			"suspicious": {
				"noExplicitAny": "off",
				"noRedeclare": "off"
			}
		}
	},
	"files": {
		"includes": ["**", "!**/lib/*", "!src/md5.ts"]
	},
	"overrides": [
		{
			"includes": ["**/*.astro"],
			"linter": {
				"rules": {
					"correctness": {
						"noUnusedImports": "off",
						"noUnusedVariables": "off"
					}
				}
			}
		}
	]
}
