{
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "target": "ES2017",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "DOM",
      "ESNext"
    ],
    "module": "ESNext",
    "outDir": "./lib",
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "types": [
      "bun-types"
    ]
  },
  "include": [
    "**/src/**/*",
    "**/__tests__/**/*",
    "examples/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}